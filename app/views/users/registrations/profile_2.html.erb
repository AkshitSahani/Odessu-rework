    <div class="bodyshape inverted-triangle">
      <%= image_tag "inv_tri.jpeg" %>
    </div>

    <div class="bodyshape round">
      <%= image_tag "round.jpeg" %>
    </div>

    <div class="bodyshape ruler">
      <%= image_tag "ruler.jpeg" %>
    </div>

    <div class="bodyshape hourglass">
      <%= image_tag "hourglass.jpeg" %>
    </div>

    <div class="bodyshape triangle">
      <%= image_tag "triangle.jpeg" %>
