            <% if x == @insecurities_bottom[i].insecurity_bottom %>
              <%= x %><%= check_box_tag('insecurity_bottom[]', x, { :multiple => true, :checked => "checked" })%>
              <% i += 1 %>
              <% break %>
            <% else %>
              <% i += 1 %>
              <% counter += 1 %>
            <% end %>
            <% if counter == @insecurities_bottom.count %>
              <%= x %><%= check_box_tag('insecurity_bottom[]', x, false, { :multiple => true })%>
              <% break %>
            <% end %>
      <% end %>
    <% end %>
  <br><span class="hide_submit"><%= submit_tag "submit" %></span></span>
<% end %>
